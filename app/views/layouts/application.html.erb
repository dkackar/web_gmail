<!DOCTYPE html>
<html>
<head>
  <title>ProjectDjello</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>


<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js" type="text/javascript"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.1.11/js/xeditable.min.js"></script>
</head>

<body ng-app="djelloApp" style="background-color:#264d73;">
  <div class="container-fluid">
 
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <h3 style="color:blue;">Djello</h3>
      </div>
      <div class="nav navbar-nav pull-right">
        <ul>
         <li><a class="nav-item" data-method="delete" href="/users/sign_out"><%=current_user.email%> sign out</a></li>
        </ul>
      </div>
    </div>  
  </nav>

  <%= yield %>
</div> 
